{
    "name": "babenkoivan/elastic-scout-driver",
    "description": "Elasticsearch driver for Laravel Scout",
    "keywords": [
        "scout",
        "elastic",
        "elasticsearch",
        "laravel",
        "driver",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Babenko",
            "email": "babenko.i.a@gmail.com"
        }
    ],
    "funding": [
        {
            "type": "buymeacoffee",
            "url": "https://www.buymeacoffee.com/ivanbabenko"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/babenkoi"
        }
    ],
    "autoload": {
        "psr-4": {
            "ElasticScoutDriver\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElasticScoutDriver\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "babenkoivan/elastic-client": "dev-php8-support as 1.2",
        "babenkoivan/elastic-adapter": "dev-php8-support as 1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "orchestra/testbench": "^5.2",
        "babenkoivan/elastic-migrations": "^1.0",
        "laravel/scout": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.32"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "laravel": {
            "providers": [
                "ElasticScoutDriver\\ServiceProvider"
            ]
        }
    }
}
